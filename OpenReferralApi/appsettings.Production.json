{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "Specification": {
    "BaseUrl": "https://raw.githubusercontent.com/tpximpact/OpenReferralApi/refs/heads/main/OpenReferralApi/Schemas/"
  },
  "Database": {
    "ConnectionString": "",
    "DatabaseName": "openreferral_prod",
    "ServicesCollection": "services"
  },
  "FeedValidation": {
    "Enabled": true,
    "IntervalHours": 48,
    "RunAtMidnight": true
  },
  "Security": {
    "AllowedCorsOrigins": [
      "https://openreferraluk.org",
      "https://www.openreferraluk.org",
      "https://api.openreferraluk.org"
    ],
    "ValidateSslCertificates": true
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 0
  },
  "OpenTelemetry": {
    "Enabled": true,
    "OtlpEndpoint": ""
  },
  "Cache": {
    "Enabled": true,
    "ExpirationMinutes": 120,
    "MaxSizeMB": 200,
    "UseSlidingExpiration": false,
    "SlidingExpirationMinutes": 30
  }
}